<p id="notice"><%= notice %></p>

<h1><%= @user.username %></strong></h1>

<p>has made <%= pluralize(@user.ratings.count, 'rating') %> ratings</p>

<% if @user.favorite_brewery %>
    <p>Favorite brewery: <%= @user.favorite_brewery %></p>
<% end %>

<% if @user.favorite_style %>
<p>Favorite style: <%= @user.favorite_style %></p>
<% end %>

<% if @user.beer_clubs %>
    <h3>Member of</h3>
    <ul>
      <% @user.beer_clubs.each do |beer_club| %>
          <li> <%= link_to beer_club.name, beer_club_path(beer_club)%> </li>
      <% end %>
    </ul>
<% end %>

<% if @user.ratings %>
<h3>Ratings</h3>
<ul>
  <% @user.ratings.each do |rating| %>
    <li> <%= rating %>
      <% if @user == current_user %>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
      <% end %>
  <% end %>
</ul>
<% end %>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
